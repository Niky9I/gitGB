<Window x:Class="WpfApp2.WindowAddDepartament"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
         Title="{Binding ElementName=DepName, Path=Text}" Height="230" Width="400" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="110*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="139*"/>
            <RowDefinition Height="79*"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="2,28,128,51" RenderTransformOrigin="0.5,0.5" Height="20" Grid.Row="1" Grid.Column="1" >Название департамента</TextBlock>
        <TextBox x:Name="DepName" HorizontalAlignment="Center" Height="20" Width="126" Margin="139,28,2,51" Grid.Row="1" Grid.Column="1"/>
        <Button x:Name="btnAddDep1" HorizontalAlignment="Center" Height="20" Width="74" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1">Добавить</Button>
    </Grid>
</Window>